unit instalar_driver;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes,
  Vcl.Graphics, Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls,
  Vcl.Imaging.pngimage, Vcl.ExtCtrls, Vcl.Buttons, PngSpeedButton;

type
  TFrame1 = class(TFrame)
    Image1: TImage;
    Label1: TLabel;
    Label3: TLabel;
    Label2: TLabel;
    Image_ok: TImage;
    Label_ok: TLabel;
    procedure Label_okMouseLeave(Sender: TObject);
    procedure Label_okMouseMove(Sender: TObject; Shift: TShiftState; X,
      Y: Integer);
    procedure Image_okMouseLeave(Sender: TObject);
    procedure Image_okMouseMove(Sender: TObject; Shift: TShiftState; X,
      Y: Integer);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

implementation

{$R *.dfm}

procedure TFrame1.Image_okMouseLeave(Sender: TObject);
begin
  Label_ok.Font.Style := [];
end;

procedure TFrame1.Image_okMouseMove(Sender: TObject; Shift: TShiftState; X,
  Y: Integer);
begin
  Label_ok.Font.Style := [fsUnderline];
end;

procedure TFrame1.Label_okMouseLeave(Sender: TObject);
begin
  Label_ok.Font.Style := [];
end;

procedure TFrame1.Label_okMouseMove(Sender: TObject; Shift: TShiftState; X,
  Y: Integer);
begin
  Label_ok.Font.Style := [fsUnderline];
end;

end.
